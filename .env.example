# Xandeum pNode RPC Configuration
# Connect to any pNode running v0.7.0+ to access the gossip network
# Default: Public pNode endpoint (change to your own pNode for production)
VITE_XANDEUM_RPC_URL=http://192.190.136.37:6000

# Fallback to mock data if API fails (useful for development)
VITE_USE_MOCK_DATA=false

# Refresh interval in milliseconds (default: 30000 = 30 seconds)
VITE_REFRESH_INTERVAL=30000

# Enable development mode
VITE_DEV_MODE=false
